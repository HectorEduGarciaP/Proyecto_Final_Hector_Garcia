                Clicked="OnRegresarClicked1"/>

                <Label FontSize="20" x:Name="sedanLabel" Text=""  HorizontalOptions="Center" />
                


            <Label x:Name="sedanLabel1" FontSize="21" Text="" HorizontalOptions="CenterAndExpand" />




        

        <Button
                x:Name="BocinarS1"
                Text="Bocinar"
                Margin="0,10,0,0"
