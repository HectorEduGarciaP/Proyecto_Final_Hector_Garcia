                Text="Encender"
                Margin="0,10,0,0"
                Clicked="EncenderS"
                HorizontalOptions="CenterAndExpand" />
        <Button
                x:Name="ApagarS1"
                Text="Apagar"
                Margin="0,10,0,0"
                Clicked="ApagarS"
                HorizontalOptions="CenterAndExpand" />
        <Button
                x:Name="AcelerarS1"
                Text="Acelerar"
                Margin="0,10,0,0"
                Clicked="AcelerarS"
                HorizontalOptions="CenterAndExpand" />
        <Button
                x:Name="FrenarS1"
